  <script>
    function togglePopup() {
      const overlay = document.getElementById('popupOverlay');
      overlay.classList.toggle('show');
    }

    function menuPopup() {
      const overlay = document.getElementById('leftColumn');
      overlay.classList.toggle('show');
    }
  </script>
